@inherits Bunit.TestContext
@code {
  [Fact]
  public void RenderSimpleChildContent()
  {
    var cut = Render(
    @<Alert>
      <h1>Hello world!</h1>
    </Alert>
    );

    cut.MarkupMatches(
    @<div class="alert alert-secondary mt-4" role="alert">
      <h1>Hello world!</h1>
    </div>
    );
  }

  [Fact]
  public void RenderCorrectly()
  {
    var cut = Render(
    @<Alert>
      <h1>Hello world!</h1>
    </Alert>
    );
    cut.MarkupMatches(
    @<div class="alert alert-secondary mt-4" role="alert">
      <h1 diff:ignore></h1>
    </div>
    );
  }

}

@page "/"
@*@attribute [Authorize]
*@
<PageTitle>Index</PageTitle>

<h1>Hello, world!</h1>

Welcome @UserName

@if (Claims is not null)
{
  foreach (Claim claim in Claims)
  {
    <p>@claim.Type - @claim.Value</p>
  }
}

<AuthorizeView Roles="admin">
  <Authorized>
    Hey, you're an admin!
 </Authorized>
</AuthorizeView>
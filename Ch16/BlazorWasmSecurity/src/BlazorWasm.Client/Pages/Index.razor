@page "/"

<h1>Hello, world!</h1>

Welcome to your new app.

@if (message is not null)
{
  <p>
    message: @message.Message
  </p>
}

<AuthorizeView>
  <Authorized>
    <div>Hi, @context.User.Identity.Name</div>
    @if (Claims is not null)
    {
      foreach (Claim claim in Claims)
      {
        <p>@claim.Type - @claim.Value</p>
      }
    }
  </Authorized>
  <NotAuthorized>
    <span>Please login to see your claims</span>
  </NotAuthorized>
</AuthorizeView>


<AuthorizeView Roles="admin">
  <Authorized>
    Hey, you're an admin!
  </Authorized>
</AuthorizeView>